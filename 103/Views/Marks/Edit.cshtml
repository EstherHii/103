@model _103.DTO.MarkList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Marks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MarkID" />
            <div class="form-group">
                <label asp-for="Mark" class="control-label"></label>
                <input asp-for="Mark" class="form-control" />
                <span asp-validation-for="Mark" class="text-danger"></span>
                @Html.ValidationMessage("marks", "", new { style = "color: red;" })
            </div>
            <div class="form-group">
                <label asp-for="UnitName" class="control-label"></label>
                <div>@Model.UnitName</div>
                <input asp-for="UnitID" type="hidden" class="form-control" />
                <span asp-validation-for="UnitID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <div>@Model.StudentName</div>
                <input asp-for="StudentID" type="hidden" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}